@using ParagliderFlightLog.ViewModels
<strong>Glider:</strong>
<RadzenDropDown AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" Data=@ViewModel.GliderNameList @bind-Value=@FlightToEdit.GliderName
                Class="w-100" />
<strong>Site:</strong>
<RadzenDropDown AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" Data=@ViewModel.SiteNameList @bind-Value=@FlightToEdit.TakeOffSiteName
                Class="w-100" />
<strong>Comment:</strong>
<RadzenTextArea @bind-Value=FlightToEdit.Comment Class="w-100" Rows="10"/>
@code {
    [Parameter] 
    public FlightViewModel FlightToEdit { get; set; }
    [Parameter]
    public MainViewModel ViewModel { get; set; }


}
