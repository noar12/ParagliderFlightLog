<RadzenFormField Text="@Label" Variant="@Variant" class="@Class">
    <RadzenDatePicker TValue="DateTime" Value="@Value" DateFormat="@DateFormat" ShowTime="@ShowTime" Change="OnChange" />
</RadzenFormField>
@code {
    [Parameter]
    public DateTime Value { get; set; }
    [Parameter]
    public string Label { get; set; } = "";
    [Parameter]
    public Variant Variant { get; set; } = Variant.Outlined;
    [Parameter]
    public EventCallback<DateTime> ValueChanged { get; set; }
    [Parameter]
    public string DateFormat { get; set; } = "d";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public bool ShowTime { get; set; } = false;
    private void OnChange(DateTime? newValue)
    {
        if (newValue != null)
        {
            Value = (DateTime)newValue;
            ValueChanged.InvokeAsync((DateTime)newValue);
        }
        
        
    }
}
