{
  "ConnectionStrings": {
    "UserDataSqlite": "Data Source=/app/data/db/proutUserDbParagliderFlightLog.db;",
    "Sqlite": "Data Source=/app/data/db/{UserId}/{UserId}_ParagliderFlightLog.db;",
    "SharedDataSqlite": "Data Source=/app/data/db/SharedDbParagliderFlightLog.db;"
  },
  "UserDirectory": {
    "Root": "/app/data/db/{UserId}",
    "RelativeFlightPhotos": "FlightPhotos"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithTreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/ParagliderFlightLog/log.txt",
          "outputTemplate": "{Timestamp:G} - {SourceContext} - {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },
  "XcScore": {
    "TmpFileDirectory": "/app/data/score/ParagliderFlightLog/score"
  }
}
