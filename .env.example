# Environment variables for Docker Compose
# Copy this file to .env and customize as needed

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Port Mappings (host:container)
HTTP_PORT=5000
HTTPS_PORT=5001

# Container Name
CONTAINER_NAME=paraglider-flightlog

# Volume Paths for Development (only used with docker-compose.dev.yml)
DEV_DATA_PATH=./dev-data

# Image Tag
IMAGE_TAG=latest
IMAGE_NAME=paraglider-flightlog

# Logging Level (options: Trace, Debug, Information, Warning, Error, Critical)
LOG_LEVEL=Information

# Database Settings (usually don't need to change these)
# DB_PATH=/app/data/db
# PHOTOS_PATH=/app/data/photos
# SCORE_PATH=/app/data/score
# LOGS_PATH=/var/log/ParagliderFlightLog
