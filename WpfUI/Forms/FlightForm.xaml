<Window x:Class="WpfUI.Forms.FlightForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUI.Forms"
        mc:Ignorable="d"
        Title="FlightForm" 
        SizeToContent="WidthAndHeight"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

  
        <StackPanel Orientation="Vertical" >

            <TextBlock Text="Take off site"/>
            <ComboBox x:Name="SiteComboBox" ItemsSource="{Binding Source.SiteNameList}"
                      SelectedItem="{Binding EditableFlight.TakeOffSiteName, Mode=OneWay}"/>



            <TextBlock Text="Glider"/>
            <ComboBox x:Name="GliderComboBox" ItemsSource="{Binding Source.GliderNameList}"
                      SelectedItem="{Binding EditableFlight.GliderName, Mode=OneWay}"/>

            <TextBlock Text="Comment"/>
            <TextBox x:Name="CommentTextBlock" Text="{Binding EditableFlight.Comment, Mode=OneWay}" MaxWidth="800" TextWrapping="Wrap"/>

        <DockPanel HorizontalAlignment="Right" >
            <Button x:Name="OkButton" Content="OK" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
        </DockPanel>
        </StackPanel>

</Window>
